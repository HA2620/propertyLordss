<body>

    {{>navbar}}
    <div class="policy-container">
        <h4>
            PRODUCTS
        </h4>
    </div>

    <div class="filter">
        
    </div>
    <div class="product-container">

        {{#each productList}}

        <div class="item-card" onmouseenter="aShow({{this.prod_id}})" onmouseleave="aClose({{this.prod_id}})">
            <a href="/prdct-main?id={{this.propertyId}}&name={{this.name}}"><img style="height=1350px;" class="prod-img"
                    src="{{this.photoUrl}}" alt="IMG">
                <a style="display: none;" id="a-o-p{{this.prod_id}}" class="a-on-product"
                    href="/prdct-main?id={{this.prod_id}}&name={{this.name}}">QUICK BUY</a>
                <p>

                    {{this.name}} <br>
                    â‚¹{{this.price}} <br>
                </p>
            </a>
        </div>

        {{/each}}



    </div>



    {{>bottomBar}}

    <script>

        function aShow(n) {
            document.getElementById(`a-o-p${n}`).style.display = "block";
        }

        function aClose(n) {
            document.getElementById(`a-o-p${n}`).style.display = "none";
        }

    </script>
</body>


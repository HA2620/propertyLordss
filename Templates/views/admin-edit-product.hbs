<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Product</title>
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>

    <div class="container">
        <div class="login-box">
            <div class="sub-heading">
                <h2>Edit Product</h2>
            </div>
            <p></p>
            <div class="login-form">
                <form action="/admin/edit-product/{{product._id}}" method="post">

                    <div class="fr-cnt">
                        <p for="productName">Product Name</p>
                        <input type="text" id="productName" name="productName" required value="{{product.name}}" />
                    </div>
                    <div class="fr-cnt">
                        <p for="productDescription">Product Description</p>
                        <input type="text" id="productDescription" name="productDescription"
                            value="{{product.description}}" required>
                    </div>
                    <div class="fr-cnt">
                        <p for="productPrice">Product Price</p>
                        <input type="number" id="productPrice" name="productPrice" required value="{{product.price}}" />
                    </div>
                    <div class="fr-cnt">
                        <label for="productLocation">Location - </label>
                        <input type="text" id="productLocation" name="productLocation" value="{{product.location}}"
                            required>
                    </div>
                    <div class="fr-cnt">
                        <label for="noOfRoom">No of Rooms - </label>
                        <input type="number" id="noOfRoom" name="noOfRoom" required value="{{product.noOfRoom}}" />
                    </div>
                    <div class="fr-cnt">
                        <label for="noOfWashroom">No of washrooms - </label>
                        <input type="number" id="noOfWashroom" name="noOfWashroom" required
                            value="{{product.noOfWashRoom}}" />
                    </div>
                    <div class="fr-cnt">
                        <label for="nearestCollege">Nearest College [kms] - </label>
                        <input type="number" id="nearestCollege" name="nearestCollege" required
                            value="{{product.distToNearestCollege}}" />
                    </div>
                    <div class="fr-cnt">
                        <label for="nearestMetro">Nearest Metro [kms] - </label>
                        <input type="number" id="nearestMetro" name="nearestMetro" required
                            value="{{product.distToNearestMetro}}" />
                    </div>
                    <div class="fr-cnt">
                        <label for="nearestHospital">Nearest Hospital [kms] - </label>
                        <input type="number" id="nearestHospital" name="nearestHospital" required
                            value="{{product.distToNearestHospital}}" />
                    </div>
                    <div class="fr-cnt">
                        <label for="picUrl">Product Picture URL - </label>
                        <input type="text" id="picUrl" name="picUrl" required value="{{product.photoUrl}}" />
                    </div>

                    <div class="fr-cnt">
                        <input type="submit" value="update" />
                    </div>
                </form>
            </div>
        </div>
</body>

</html>

{{!-- {{/each}} --}}